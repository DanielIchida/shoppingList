<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Nueva Lista"
        android:id="@+id/fieldNewList" />


    <TextView
        style="@style/ButtonTextStyleFloat"
        android:text="Cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldNewList"
        android:layout_alignParentRight="true"
        android:id="@+id/btnNewCancel" />

    <TextView
        style="@style/ButtonTextStyleFloat"
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldNewList"
        android:layout_toLeftOf="@id/btnNewCancel"
        android:id="@+id/btnNewSave" />


</RelativeLayout>