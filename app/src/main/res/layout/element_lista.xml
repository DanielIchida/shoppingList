<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/rl_element_list"
    android:layout_height="wrap_content">


    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLista"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtIdLista"
        android:layout_toRightOf="@id/txtLista"
        android:visibility="gone"
        />

    <ImageView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/imgShare"
        app:srcCompat="@drawable/ic_folder_shared"
        android:layout_toRightOf="@id/txtIdLista"
        android:visibility="gone" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_more_vert"
        android:id="@+id/imgEditLista"
        android:layout_alignTop="@id/txtLista"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete"
        android:id="@+id/imgDeleteLista"
        android:layout_alignTop="@id/txtLista"
        android:layout_toLeftOf="@id/imgEditLista"/>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFechaLista"
        android:layout_alignBottom="@id/txtLista"
        android:layout_toLeftOf="@id/imgDeleteLista" />





</RelativeLayout>